<%- include('partials/header.ejs') %>

<style>
    .card { background: white; border-radius: 12px; border: 1px solid var(--border); padding: 24px; box-shadow: 0 4px 6px -1px rgb(0 0 0 / 0.05); max-width: 900px; }
    .card-title { font-size: 18px; font-weight: 700; margin-bottom: 20px; display: flex; align-items: center; gap: 8px; color: var(--text-main); border-bottom: 1px solid #f1f5f9; padding-bottom: 12px; }
    
    .tier-box { margin-bottom: 24px; border: 1px solid #e2e8f0; border-radius: 10px; overflow: hidden; }
    .tier-header { background: #f8fafc; padding: 12px 16px; display: flex; justify-content: space-between; align-items: center; border-bottom: 1px solid #e2e8f0; }
    .tier-name { font-weight: 800; font-size: 14px; color: #1e293b; text-transform: uppercase; display: flex; align-items: center; gap: 6px; }
    
    table { width: 100%; border-collapse: collapse; font-size: 14px; }
    th { text-align: left; padding: 12px 16px; color: var(--text-muted); font-size: 11px; text-transform: uppercase; border-bottom: 2px solid #f1f5f9; }
    td { padding: 12px 16px; border-bottom: 1px solid #f1f5f9; }

    .btn-delete-group { color: #ef4444; font-size: 11px; font-weight: 700; cursor: pointer; background: #fee2e2; border: 1px solid #fecaca; padding: 4px 10px; border-radius: 6px; transition: all 0.2s; }
    .btn-delete-group:hover { background: #ef4444; color: white; }

    .add-form-bg { background: #f8fafc; padding: 16px; border-radius: 10px; border: 1px dashed #cbd5e1; margin-top: 16px; }
    .rule-input-sm { padding: 10px 12px; border: 1px solid #cbd5e1; border-radius: 6px; font-size: 14px; width: 100%; outline: none; }
    .rule-input-sm:focus { border-color: var(--primary); }
    .btn-save-sm { background: var(--primary); color: white; border: none; padding: 10px 16px; border-radius: 6px; font-weight: 600; cursor: pointer; transition: background 0.2s; }
    .btn-save-sm:hover { background: #059669; }

    @media (max-width: 768px) {
        .form-grid { grid-template-columns: 1fr !important; }
        .tier-header { flex-direction: column; align-items: flex-start; gap: 10px; }
        .btn-delete-group { align-self: flex-start; }
    }
</style>

<div class="grid-container">
    <div style="margin-bottom: 24px;">
        <h1 style="margin: 0 0 4px 0; font-size: 24px;">Profit Markups</h1>
        <p style="color: var(--text-muted); margin: 0; font-size: 14px;">Define pricing rules and margins for different client tiers.</p>
    </div>

    <div class="card">
        <div class="card-title"><i data-lucide="banknote" style="color: #10b981;"></i> Current Markup Rules</div>

        <% 
            const grouped = {};
            markups.forEach(m => {
                if (!grouped[m.client_code]) grouped[m.client_code] = [];
                grouped[m.client_code].push(m);
            });
        %>

        <% Object.keys(grouped).forEach(tierName => { %>
            <div class="tier-box">
                <div class="tier-header">
                    <span class="tier-name"><i data-lucide="tag" style="width:14px;"></i> <%= tierName %></span>
                    <% if(tierName !== 'DEFAULT') { %>
                        <form action="/rules/markup/delete-group/<%= tierName %>" method="POST" onsubmit="return confirm('Delete entire rule group?')">
                            <button type="submit" class="btn-delete-group">Delete Rule</button>
                        </form>
                    <% } %>
                </div>
                <div style="overflow-x: auto;">
                    <table>
                        <thead>
                            <tr>
                                <th>Min SAR</th>
                                <th>Max SAR</th>
                                <th>Profit</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            <% grouped[tierName].forEach(rule => { %>
                                <tr>
                                    <td><%= rule.min_price %></td>
                                    <td><%= rule.max_price %></td>
                                    <td style="color: #10b981; font-weight: 700;">+<%= rule.markup_amount %></td>
                                    <td style="text-align: right;">
                                        <form action="/rules/markup/delete-tier/<%= rule.id %>" method="POST">
                                            <button class="btn-del" style="background:none; border:none; color:#ef4444; cursor:pointer;"><i data-lucide="trash-2" style="width:16px;"></i></button>
                                        </form>
                                    </td>
                                </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>
                <div style="padding: 12px 16px; background: #fcfcfc; border-top: 1px solid #f1f5f9;">
                    <form action="/rules/markup/add" method="POST" class="form-grid" style="display: grid; grid-template-columns: 1fr 1fr 1fr auto; gap: 12px; align-items: center;">
                        <input type="hidden" name="client_code" value="<%= tierName %>">
                        <input type="number" name="min_price" class="rule-input-sm" placeholder="Min" required>
                        <input type="number" name="max_price" class="rule-input-sm" placeholder="Max" required>
                        <input type="number" name="markup_amount" class="rule-input-sm" placeholder="Profit" required>
                        <button type="submit" class="btn-save-sm"><i data-lucide="plus" style="width:16px;"></i></button>
                    </form>
                </div>
            </div>
        <% }); %>

        <div class="add-form-bg">
            <p style="font-size: 12px; font-weight: 800; color: var(--text-muted); text-transform: uppercase; margin-bottom: 12px;">Create Completely New Rule Name</p>
            <form action="/rules/markup/add" method="POST" class="form-grid" style="display: flex; gap: 12px;">
                <input type="text" name="client_code" class="rule-input-sm" placeholder="New Rule (e.g. VIP-B2B)" required>
                <input type="hidden" name="min_price" value="0">
                <input type="hidden" name="max_price" value="99999">
                <input type="hidden" name="markup_amount" value="20">
                <button type="submit" class="btn-save-sm" style="white-space:nowrap;">+ Create</button>
            </form>
        </div>
    </div>
</div>

<%- include('partials/footer.ejs') %>